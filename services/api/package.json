{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "author": "Gniewomir Åšwiechowski <gniewomir.swiechowski@gmail.com>",
  "license": "ISC",
  "main": "dist/api.js",
  "scripts": {
    "lint": "./node_modules/tslint/bin/tslint -c tslint.json -p tsconfig.json --fix",
    "prebuild": "npm run lint",
    "build": "tsc",
    "test": "NODE_ENV=testing jest --verbose --runInBand --config=jest.config.js --detectOpenHandles --collect-coverage",
    "test:watch": "NODE_ENV=testing jest --verbose --runInBand --config=jest.config.js --detectOpenHandles --collect-coverage --watch",
    "watch": "./node_modules/.bin/nodemon -e 'ts' --watch 'src' --ignore 'src/**/*.spec.ts' --exec 'ts-node ./src/api.ts'",
    "typeorm": "node --require ./node_modules/ts-node/register ./node_modules/typeorm/cli.js --config src/application/config/typeorm.cli.ts",
    "typeorm:testing": "NODE_ENV=testing node --require ./node_modules/ts-node/register ./node_modules/typeorm/cli.js --config src/application/config/typeorm.cli.ts",
    "db:drop": "node --require ./node_modules/ts-node/register ./node_modules/typeorm/cli.js  --config src/application/config/typeorm.cli.ts schema:drop",
    "db:migrate": "node --require ./node_modules/ts-node/register ./node_modules/typeorm/cli.js  --config src/application/config/typeorm.cli.ts migration:run",
    "db:refresh": "npm run db:drop && npm run db:migrate",
    "db:testing:drop": "NODE_ENV=testing node --require ./node_modules/ts-node/register ./node_modules/typeorm/cli.js  --config src/application/config/typeorm.cli.ts schema:drop",
    "db:testing:migrate": "NODE_ENV=testing node --require ./node_modules/ts-node/register ./node_modules/typeorm/cli.js  --config src/application/config/typeorm.cli.ts migration:run"
  },
  "dependencies": {
    "argon2": "^0.27.0",
    "body-parser": "^1.19.0",
    "celebrate": "^13.0.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.27.0",
    "pg": "^8.3.3",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.25",
    "typeorm-typedi-extensions": "^0.2.3",
    "winston": "^3.3.3",
    "jest": "^26.4.2",
    "supertest": "^4.0.2",
    "faker": "^5.1.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.5.0",
    "@types/express": "^4.17.8",
    "@types/faker": "^5.1.0",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.10.1",
    "@types/supertest": "^2.0.10",
    "@types/cors": "^2.8.7",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2"
  }
}
